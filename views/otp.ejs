<%- include ('./partials/header');%>

  
<body>
  <div class="preloader">
    <div class="preloader-container">
      <span class="animated-preloader"></span>
    </div>
  </div>

  <!-- scroll-to-top start -->
  <div class="scroll-to-top">
    <span class="scroll-icon">
      <i class="fa fa-rocket" aria-hidden="true"></i>
    </span>
  </div>
  <!-- scroll-to-top end -->

<div class="full-wh">
  <!-- STAR ANIMATION -->
  <div class="bg-animation">
    <div id='stars'></div>
    <div id='stars2'></div>
    <div id='stars3'></div>
    <div id='stars4'></div>
  </div><!-- / STAR ANIMATION -->
</div>
<div class="page-wrapper">

  <!-- account section start -->
  <div class="account-section bg_img" >
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-7">
          <div class="account-card">
            <div class="account-card__header bg_img overlay--one" >
              <h2 class="section-title">Welcome to <span class="base--color">RAINBOW CAPITALS</span></h2>
              <p>Kindly check your Email we've sent you a One Time Password</p>
            </div>
            <div class="account-card__body">
              <form class="mt-4" action="/auth/check" method="POST">
                

                <div class="form-group">
                    <label>One Time Password(check mail)</label>
                    <input type="text" class="form-control" name="code" placeholder="Enter OTP">
                  </div>

                </div>
                <div class="mt-3">
                  <button class="cmn-btn">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  <!-- account section end -->

</div> <!-- page-wrapper end -->
