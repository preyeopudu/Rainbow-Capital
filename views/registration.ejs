<%- include ('./partials/header');%>
  <body>


    

    <div class="preloader">
      <div class="preloader-container">
        <span class="animated-preloader"></span>
      </div>
    </div>
  
    <!-- scroll-to-top start -->
    <div class="scroll-to-top">
      <span class="scroll-icon">
        <i class="fa fa-rocket" aria-hidden="true"></i>
      </span>
    </div>
    <!-- scroll-to-top end -->

  <div class="full-wh">
    <!-- STAR ANIMATION -->
    <div class="bg-animation">
      <div id='stars'></div>
      <div id='stars2'></div>
      <div id='stars3'></div>
      <div id='stars4'></div>
    </div><!-- / STAR ANIMATION -->
  </div>
  <div class="page-wrapper">

    <!-- account section start -->
    <div class="account-section bg_img" >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-lg-7">
            <div class="account-card">
              <div class="account-card__header bg_img overlay--one" >
                <h2 class="section-title">Welcome to <span class="base--color">RAINBOW CAPITALS</span></h2>
                <p><%=error%></p>
                      </div>
              <div class="account-card__body">
                <h3 class="text-center">Create an Account</h2>
                <form action="/auth/otp" method="POST" class="mt-4">
                  <div class="form-group">
                    <label>First Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Enter first name" required>
                  </div>
                  <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="username" class="form-control" placeholder="Enter email address" required>
                  </div>
                  <div class="form-group">
                    <label>Refrees Email (optional)</label>
                    <input type="email" name="referee" class="form-control" placeholder="Enter Refrees email" >
                  </div>

                  <div class="form-group">
                    <label>Secret Phrase</label>
                    <input type="text" name="secret" class="form-control" placeholder="Phrase would be used to reset password" required>
                  </div>


                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password" required>
                  </div>
                  <div class="form-row">
                   
                    <div class="col-sm-6 ">
                      <p class="f-size-14">Have an account? <a href="/auth/signin" class="base--color">Login</a></p>
                    </div>
                
                  </div>

          <!-- Modal -->
          <div class="modal  modal-fullscreen fade choose-card__title base--color" style="background-color: #101113;" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog" >
              <div class="modal-content" style="background-color: #101113;">
                
                <div class="modal-body">
                  
               <p>Do you accept our  <a href="/disclaimer">Terms and Policy</a> ?</p>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-success" data-bs-dismiss="modal">I accept</button>
                  <a class="btn btn-danger" href="/">Go Back</a>
                </div>
              </div>
            </div>
          </div>
                            <div class="mt-3">
                              <button class="cmn-btn" onclick="save()">SignUp Now</button>
                            </div>
                          </form>
                         
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- account section end -->


              <script>
                  const save=()=>{
                    
                    let username=document.getElementsByName('username')[0].value
                    let password=document.getElementsByName('password')[0].value
                    let referee=document.getElementsByName('referee')[0].value
                    let name=document.getElementsByName('name')[0].value
                    let secret=document.getElementsByName('secret')[0].value
                    console.log('password is'+password)

                    localStorage.setItem('user',JSON.stringify({username:username,password:password,referee:referee,name:name,secret:secret}))
                  }


              </script>

  </div> <!-- page-wrapper end -->
    <!-- jQuery library -->
  <script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="/assets/js/vendor/bootstrap.bundle.min.js"></script>
  <!-- slick slider js -->
  <script src="/assets/js/vendor/slick.min.js"></script>
  <script src="/assets/js/vendor/wow.min.js"></script>
  <script src="/assets/js/contact.js"></script>
  <!-- dashboard custom js -->
  <script src="/assets/js/app.js"></script>
  <script src="/assets/js/vendor/bootstrap.min.js"></script>
  <script>
    $(document).ready(function(){
      $('#exampleModal').modal({backdrop: 'static', keyboard: false}) 
      $('#exampleModal').modal('show',{backdrop: 'static', keyboard: false})
           
    })


  </script>
  </body>
</html>