<%- include ('./partials/header');%>
<div class="container">
    <p class="lead" style="text-align: center;font-size: 1.6rem;">Withdrawals below</p>
<%fiats.forEach(function(withdrawal){%>
    <div>
    
    <div class="card text-light bg-dark mb-3">
        <div class="card-header">
            <h4 class="lead" style="font-weight: 600;font-size: 1.2rem;float: left;">Bank Name : <%=withdrawal.bank%></h4>
            <h5 class="lead" style="font-weight: 600;font-size: 1.2rem;float: right;">Account Name : <%=withdrawal.accountName%></h5>
        </div>

        <div class="card-body">
            <p class="lead" style="font-weight: 600;font-size: 1.2rem;">Amount: <%=withdrawal.amount%> NGN</p>
            <p class="lead card-text" style="font-weight: 600;font-size: 1.2rem;">Account Number : <%=withdrawal.accountNumber%></p>
            <form method="POST" action="/transfer/fiat/<%=withdrawal._id%>" style="margin-top: 10px;">
              <button type="submit" class="btn btn-primary">Paid</button>
            </form>
        </div>
        
    </div>

    </div>

<%})%>
</div>

<%- include ('./partials/footer');%>