<%- include ('./partials/header');%>

<div class="container">
    <p class="lead" style="text-align: center;font-size: 1.6rem;">point payments below :</p>
<%points.forEach(function(point){%>
    <div>
    
    <div class="card text-light bg-dark mb-3">
        <div class="card-header">
            <h4 class="lead" style="font-weight: 600;font-size: 1.2rem;float: left;">Facebook : <%=point.accountName%></h4>
            <h5 class="lead" style="font-weight: 600;font-size: 1.2rem;float: right;">Username : <%=point.username%></h5>
        </div>

        <div class="card-body">
            <p class="lead" style="font-weight: 600;font-size: 1.2rem;">Amount: <%=point.amount%> Points</p>
            <form method="POST" action="/transfer/point/<%=point._id%>" style="margin-top: 10px;">
              <button type="submit" class="btn btn-primary">Paid</button>
            </form>
        </div>
        
    </div>

    </div>

<%})%>
</div>

<%- include ('./partials/footer');%>