<%- include ('./partials/header');%>

<div class="container">
  <p class="lead" style="text-align: center;font-size: 1.6rem;"><%=type%> payments below :</p>

<%withdrawals.forEach(function(withdrawal){%>
    
    <div class="card text-light bg-dark mb-3">
        <div class="card-header">
            <h4 class="lead" style="font-weight: 600;font-size: 1.2rem;float: left;"><%=withdrawal.paymentType%></h4>
            <h5 class="lead" style="font-weight: 600;font-size: 1.2rem;float: right;"><%=withdrawal.paymentDate.toLocaleTimeString()%></h5>
        </div>

        <div class="card-body">
            <p class="lead" style="font-weight: 600;font-size: 1.2rem;">Amount: <%=withdrawal.amount%> BTX</p>
            <p class="lead card-text" style="font-weight: 600;font-size: 1.2rem;">Wallet : <%=withdrawal.address%></p>

            <form method="POST" action="/transfer/<%=withdrawal.paymentType%>/<%=withdrawal._id%>" style="margin-top: 10px;">
              <button type="submit" class="btn btn-primary">Confirm</button>
            </form>

           
        </div>
        
    </div>

    


<%})%>
</div>

<%- include ('./partials/footer');%>