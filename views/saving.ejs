<%- include ('./partials/header3');%>
  <body>


    

    <div class="preloader">
      <div class="preloader-container">
        <span class="animated-preloader"></span>
      </div>
    </div>
  
    <!-- scroll-to-top start -->
    <div class="scroll-to-top">
      <span class="scroll-icon">
        <i class="fa fa-rocket" aria-hidden="true"></i>
      </span>
    </div>
    <!-- scroll-to-top end -->

  <div class="full-wh">
    <!-- STAR ANIMATION -->
    <div class="bg-animation">
      <div id='stars'></div>
      <div id='stars2'></div>
      <div id='stars3'></div>
      <div id='stars4'></div>
    </div><!-- / STAR ANIMATION -->
  </div>
  <div class="page-wrapper">

    <!-- account section start -->]
    <div class="account-section bg_img" >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-lg-7">
            <div class="account-card">
            
              <%if(user.savings.length >0){%>
                <div class="account-card__body">
                  <p>savings of <%=user.savings[0].cost%> NGN  will be available in your interest wallet on <%=user.savings[0].matureDate.toLocaleString()%></p>
                </div>
              <%}else if(user.savings.length<=0){%>
                <div class="account-card__body">
                  <form action="/<%=user.username%>/save" method="POST" class="mt-4">
                    
                    <div class="form-group">
                      <input type="number" name="amount" class="form-control" placeholder="Input Amount"  required>
                      
                      <select type="text" name="time" class="form-control"  required style="margin-top: 40px;">
                          <option>2 Months</option>
                          <option>4 Months</option>
                          <option>6 Months</option>
                          <option>8 Months</option>
                          <option>10 Months</option>
                          <option>12 Months</option>
                      </select>
                    </div>
  
  
       
                              <div class="mt-3">
                                <button class="cmn-btn" onclick="save()">Submit</button>
                              </div>
                            </form>
                           
                          </div>
              <%}%>
             


                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- account section end -->



  </div> <!-- page-wrapper end -->
    <!-- jQuery library -->
  <script src="/assets/js/vendor/jquery-3.5.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="/assets/js/vendor/bootstrap.bundle.min.js"></script>
  <!-- slick slider js -->
  <script src="/assets/js/vendor/slick.min.js"></script>
  <script src="/assets/js/vendor/wow.min.js"></script>
  <script src="/assets/js/contact.js"></script>
  <!-- dashboard custom js -->
  <script src="/assets/js/app.js"></script>
  <script src="/assets/js/vendor/bootstrap.min.js"></script>

  </body>
</html>