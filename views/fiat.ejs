<%- include ('./partials/header');%>

<div class="container">
    <p class="lead" style="text-align: center;font-size: 1.6rem;">Fiat payments below :</p>
<%fiats.forEach(function(fiat){%>
    <div>
    
    <div class="card text-light bg-dark mb-3">
        <div class="card-header">
            <h4 class="lead" style="font-weight: 600;font-size: 1.2rem;float: left;">Bank Name : <%=fiat.bank%></h4>
            <h5 class="lead" style="font-weight: 600;font-size: 1.2rem;float: right;">Account Name : <%=fiat.accountName%></h5>
        </div>

        <div class="card-body">
            <p class="lead" style="font-weight: 600;font-size: 1.2rem;">Amount: <%=fiat.amount%> BTX</p>
            <p class="lead card-text" style="font-weight: 600;font-size: 1.2rem;">Account Number : <%=fiat.accountNumber%></p>
            <form method="POST" action="/transfer/fiat/<%=fiat._id%>" style="margin-top: 10px;">
              <button type="submit" class="btn btn-primary">Paid</button>
            </form>
        </div>
        
    </div>

    </div>

<%})%>
</div>

<%- include ('./partials/footer');%>